doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title Edit
        style.
            * {
                margin: 0;
                padding: 0;
            }
            .head-list {
                width: 100%;
                height: 80px;
                position: relative;
                background-color: #484848;
            }
            .site-name {
                width: 200px;
                height: 100%;
                color: #fff;
                font: 54px sans-serif;
                text-align: center;
            }
            .user-name {
                width: 300px;
                height: 100%;
                position: absolute;
                top: 0;
                right: 0;
                color: #fff;
                font: 20px sans-serif;
                text-align: center;
            }
            .yh, .name {
                display: inline-block;
                height: 100%;
                width: 50%;
                line-height: 75px;
            }
            .yh {
                text-align: right;
            }
            .list-cont {
                width: 100%;
                height: 800px;
                background-color: #eeeff1;
            }
